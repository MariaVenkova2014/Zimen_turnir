#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int rows = n; // total number of rows in rhombus

    for (int i = 0; i < rows; i++) {
        int spaces = abs(rows/2 - i); // leading spaces
        int count = rows - 2 * spaces; // letters in the row

        cout << string(spaces, ' ');

        char c = (i % 2 == 0) ? 'm' : 'w'; // alternate row letter
        for (int j = 0; j < count; j++) {
            cout << c;
            if (j < count - 1) cout << " "; // space between letters
        }

        cout << "\n";
    }

    return 0;
}
