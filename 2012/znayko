#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cin >> a >> b >> c;

    // Step 1: largest 3-digit number divisible by b
    int largest = 999 - (999 % b);

    // Step 2: smallest 4-digit number divisible by c
    int smallest4 = 1000;
    if (1000 % c != 0) {
        smallest4 += (c - (1000 % c));
    }

    // Step 3: Znayko's number
    int number = a + largest + smallest4;

    cout << number << endl;
}
